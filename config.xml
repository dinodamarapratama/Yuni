   <gap:splash src="splash/480_800.jpg" gap:platform="android" gap:qualifier="port-hdpi" />
   <gap:splash src="splash/640_960.jpg" gap:platform="android" gap:qualifier="port-xhdpi" />
   
   <gap:splash src="splash/400_240.jpg" gap:platform="android" gap:qualifier="land-ldpi" /> 
   <gap:splash src="splash/480_320.jpg" gap:platform="android" gap:qualifier="land-mdpi" /> 
   <gap:splash src="splash/800_480.jpg" gap:platform="android" gap:qualifier="land-hdpi" />
